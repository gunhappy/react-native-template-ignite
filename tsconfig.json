{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": ["es7"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "src", "test"]
}